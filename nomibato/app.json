{
  "expo": {
    "name": "ノミバト",
    "slug": "nomibato",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "nomibato",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/nomibato_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nomibato.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nomibato.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2631401630856793~7706449529",
          "iosAppId": "ca-app-pub-2631401630856793~9216205847"
        }
      ],
      "react-native-iap",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.2.0"
          }
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "deada924-3733-4264-bc5e-fda52fca7c40"
      }
    }
  }
}
